@model IEnumerable<ProyectoFinal.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="titulo">Productos</h1>

<br />
<hr />
<br />

<p>
    <a class="btn btnGuardar" title="Agregar Nuevo Registro" asp-action="Create">Nuevo!</a>
</p>

<table id="table" class="table-hover" style="white-space: nowrap;">
    <thead class="subtitulo">
        <tr style="text-align:center">
            <th>
                @Html.DisplayNameFor(model => model.NombreProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoProductoNavigation.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="text-align:center">
            <td>
                @Html.DisplayFor(modelItem => item.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoProductoNavigation.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <a asp-action="Edit" title="Editar" class="btn btnEditar" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a> |
                <a asp-action="Details" title="Detalles" class="btn btnDetalles" asp-route-id="@item.Id"><i class="fa fa-list-alt"></i></a> |
                <a asp-action="Delete" title="Eliminar" class="btn btnEliminar" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
