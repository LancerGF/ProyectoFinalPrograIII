@model IEnumerable<ProyectoFinal.Models.Factura>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="titulo">Facturas</h1>

<br />
<hr />
<br />

<p>
    <a class="btn btnGuardar" title="Agregar Nuevo Registro" asp-action="Create">Nuevo!</a>
</p>

<table id="table" class="table-hover" style="white-space: nowrap;">
    <thead class="subtitulo">
        <tr style="text-align:center">
            <th>
                Cliente
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCompra)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="text-align:center">
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoTotal)
            </td>
            <td>
                @item.FechaCompra.ToShortDateString()
                @*@Html.DisplayFor(modelItem => item.FechaCompra)*@
            </td>
                <td>
                    <a asp-action="Edit" title="Editar" class="btn btnEditar" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a> |
                    <a asp-action="Details" title="Detalles" class="btn btnDetalles" asp-route-id="@item.Id"><i class="fa fa-list-alt"></i></a> |
                    <a asp-action="Delete" title="Eliminar" class="btn btnEliminar" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
